// Workout Form

Padding = 10px
Margin = 20px

.node-workout-form
  .field--name-title
    label
      display none
  .tabledrag-toggle-weight-wrapper
    display none
  .field--name-field-display-settings
    border 1px solid COLOR_GREY
    padding Padding
    margin-bottom Margin
    clear both
  .field--name-field-action-sets
    .paragraph-type-title
      display none
    .field-multiple-table
      thead
        th
          padding Padding
      tbody
        tr.draggable // This is a complete pargraph form element with draggables.
          border 1px solid COLOR_GREY
          td.field-multiple-drag
            // This is the Dragger.
            a.tabledrag-handle
              .handle
                margin-left 0
          td:nth-child(2)
            // This is the paragraph content.
            padding Padding
    .paragraphs-subform.form-wrapper
      .field--name-field-exercise
      .field--name-field-repititions
      .field--name-field-sets
      .field--name-field-weight
      .field--name-field-duration
      .field--name-field-distance
      .field--name-field-power
        lost-column 1/2
        label
          font-size 75%
          lost-column 1/3
        input
          lost-column 2/3
        .field-suffix
          lost-column 1/3
          font-size 50%
      .field--name-field-weight
      .field--name-field-distance
        input
        .js-form-type-select
          lost-column 1/3
        input
          margin-right 30px !important
        .js-form-type-select
          *
            font-size 75%
      .field--name-field-duration
      .field--name-field-power
        input
          lost-column 1/3


  .field--name-field-display-settings
    .paragraphs-subform
      > *
        display inline-block
        padding-right 5px


  .paragraph-type-top
    .paragraph-type-title
      text-overflow: unset
      overflow: unset