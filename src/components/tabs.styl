  //The Magic
  [id^="tab"]:checked + label
  [id^="tab"]:checked + label a
  {
    top: 0;
    // padding-top: 17px;
    background: darken($tabs-base-color, 15);
  }
  [id^="tab"]:checked ~ [id^="tab-content"] {
    display: block;
  }
}
