  .block
    > .field
      margin-bottom 20px

  article
    > div
      > .field
        margin-bottom 20px
    // Exhibition content page
    &.content-type-exhibition
      h1
        margin 30px 0 23px 0
      .field--name-field-images > .field__items
      .field--name-field-images.field__items
        margin-top 40px
        lost-masonry-wrap: no-flex;
        > .field__item
          lost-masonry-column 1/2
          margin-bottom 20px
          // lost-column 1/2
          // width 50%

    // Artists content page
    &.content-type-artist
      > div
        h1
        #page-tabs__tab-labels
          lost-column 1/2
        #page-tabs
          padding-top 100px
        .field--name-field-images.field--type-entity-reference-revisions
          > .field__items > .field__item
            margin-bottom 60px
            .field--name-field-image
              margin-bottom: 20px
            .field--name-field-caption
              lost-column 1/2
              float none !important


